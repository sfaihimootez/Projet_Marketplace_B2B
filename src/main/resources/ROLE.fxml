<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.AjouterRole">

    <VBox spacing="15" alignment="CENTER"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

        <Label text="Gestion des Rôles"
               style="-fx-font-size:20px; -fx-font-weight:bold;" />

        <TextField fx:id="nomRoleField"
                   promptText="Nom du rôle" />

        <Button text="Ajouter"
                onAction="#ajouterRole"
                style="-fx-background-color:#8BAAAD;" />

        <TableView fx:id="roleTable">
            <columns>
                <TableColumn fx:id="colId"
                             text="ID"
                             prefWidth="100"/>
                <TableColumn fx:id="colNom"
                             text="Nom Rôle"
                             prefWidth="200"/>
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
